{
  "compilerOptions": {
    "outDir": "./dist",
    "sourceMap": true,
    "module": "es2015",
    "target": "es5",
    "moduleResolution": "node",    
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2016",
      "dom"
    ]
  },
  "exclude": [
    "node_modules",
    "dist",
    "scripts"
  ],
  "angularCompilerOptions": {
    "debug": true,
    "skipTemplateCodegen": true
  }
}